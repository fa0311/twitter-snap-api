{
  "name": "twitter-snap-api",
  "version": "1.0.0",
  "description": "A simple API server for Twitter Snap",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.4",
    "@hono/standard-validator": "^0.1.5",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.3",
    "@hono/zod-validator": "^0.7.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "async-mutex": "^0.5.0",
    "dotenv": "^17.2.2",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.9.8",
    "hono-openapi": "^1.0.8",
    "twitter-snap": "^0.0.79",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
